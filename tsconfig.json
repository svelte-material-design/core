{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ES2019",
		"lib": [
			"DOM",
			"ES2020",
		],
		"allowSyntheticDefaultImports": true,
		"keyofStringsOnly": true
	},
	"include": [
		"index.ts",
		"packages/**/*"
	],
	"exclude": [
		"**/node_modules/**/*",
	]
}